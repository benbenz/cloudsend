    "version": "0.2.0",
    "configurations": [

        {
            "name": "Demo",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/katapult/demo.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["config.py"],
            "env": {
                "PYTHONPATH":"${workspaceRoot}:${workspaceRoot}/.venv/lib/python3.9/site-packages:$PYTHONPATH"
            }
        },
        {
            "name": "Demo (w/ reset)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/katapult/demo.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["config.py","reset"],
            "env": {
                "PYTHONPATH":"${workspaceRoot}:$PYTHONPATH"
            }
        },
        {
            "name": "Demo Kyel",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/katapult/demo.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["./kyel/config-montecarlo10-1.py","reset"],
            "env": {
                "PYTHONPATH":"${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"
            }
        },
        {
            "name": "Demo CLI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/katapult/demo.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["config.py","cli"],
            "env": {
                "PYTHONPATH":"${workspaceRoot}:${workspaceRoot}/.venv/lib/python3.9/site-packages:$PYTHONPATH"
            }
        },       
        {
            "name": "Maestro Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/katapult/maestroserver.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["-u"],
            "env": {
                "PYTHONPATH":"${workspaceRoot}:$PYTHONPATH"
            }
        } ,
        {
            "name": "Client Start",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/katapult/maestroclient.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["start"],
            "env": {
                "PYTHONPATH":"${workspaceRoot}:$PYTHONPATH"
            }
        },
        {
            "name": "Test KeyPair",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_keypair.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["config.py"],
            "env": {
                "PYTHONPATH":"${workspaceRoot}:$PYTHONPATH"
            }
        },
        {
            "name": "Scriptflow Simple",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/scriptflow",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/examples/scriptflow/simple/",
            "args": ["run","sleepit"],
            "env": {
                "PATH":"${workspaceFolder}/.venv/bin:$PATH",
                "PYTHONPATH":"${workspaceRoot}:${workspaceRoot}/.venv/lib/python3.9/site-packages:$PYTHONPATH"
            }
        },
        {
            "name": "PyTest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["-s"],
            "env": {
                "PATH":"${workspaceFolder}/.venv/bin:$PATH",
                "PYTHONPATH":"${workspaceRoot}:${workspaceRoot}/.venv/lib/python3.9/site-packages:$PYTHONPATH"
            }
        }
    ]
}